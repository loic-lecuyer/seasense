<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Exavision.Seasense.Mock.Seamos.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="450"
        x:Class="Exavision.Seasense.Mock.Seamos.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="Exavision.Seasense.Mock.Seamos">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"></RowDefinition>
			<RowDefinition Height="Auto"></RowDefinition>
			<RowDefinition Height="Auto"></RowDefinition>
		</Grid.RowDefinitions>
		<TextBlock Grid.Column="0" Grid.Row="0" Text="Pan"></TextBlock>
		<TextBlock Grid.Column="1" Grid.Row="0" Text="{Binding Pan}"></TextBlock>
		<TextBlock Grid.Column="0" Grid.Row="1" Text="Tilt"></TextBlock>
		<TextBlock Grid.Column="1" Grid.Row="1" Text="{Binding Tilt}"></TextBlock>
    </Grid>

</Window>
